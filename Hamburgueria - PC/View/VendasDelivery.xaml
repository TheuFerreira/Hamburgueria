<Window x:Class="Hamburgueria.View.VendasDelivery"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hamburgueria.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VendasDelivery" Background="White" Height="384" Width="684" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">

    <Grid>
        <Grid Background="#FF4472C4">
            <Rectangle Height="137" VerticalAlignment="Top" Grid.ColumnSpan="2">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF1B3BC6" Offset="0"/>
                        <GradientStop Color="#FF4472C4" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <TextBox x:Name="search" Height="21" Margin="78,20,277,0" CharacterCasing="Upper" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>

            <Label Content="NOME" HorizontalAlignment="Left" Height="21" Margin="20,70,0,0" VerticalAlignment="Top" Width="45" FontFamily="Arial" Foreground="White"/>
            <TextBox x:Name="nameClient" Height="21" Margin="65,70,20,0" TextWrapping="Wrap" VerticalAlignment="Top" SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial" CharacterCasing="Upper"/>

            <Label Content="QUANTIDADE" Height="21" Margin="478,20,105,0" VerticalAlignment="Top" FontFamily="Arial" Foreground="White" RenderTransformOrigin="0.5,0.5"/>
            <TextBox x:Name="quantity" Text="&#xD;&#xA;" Height="21" Margin="564,20,20,0" TextWrapping="Wrap" VerticalAlignment="Top" BorderBrush="White" SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial" />

            <Label Content="NÚMERO" HorizontalAlignment="Left" Height="21" Margin="511,110,0,0" VerticalAlignment="Top" Width="63" FontFamily="Arial" Foreground="White"/>
            <TextBox x:Name="number" Height="21" Margin="574,110,20,0" TextWrapping="Wrap" VerticalAlignment="Top"  SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>

            <Label Content="RUA" HorizontalAlignment="Left" Height="21" Margin="20,110,0,0" VerticalAlignment="Top" Width="37" FontFamily="Arial" Foreground="White"/>
            <TextBox x:Name="street" CharacterCasing="Upper" Height="21" Margin="53,110,193,0" TextWrapping="Wrap" VerticalAlignment="Top"  SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>

            <Label Content="COMPLEMENTO" HorizontalAlignment="Left" Height="21" Margin="20,155,0,0" VerticalAlignment="Top" Width="104" FontFamily="Arial" Foreground="White"/>
            <TextBox x:Name="complement" CharacterCasing="Upper" Height="21" Margin="121,155,193,0" TextWrapping="Wrap" VerticalAlignment="Top"  SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>

            <Label x:Name="labelTotalSale" Content="TOTAL: R$ 0,00" Height="35" Margin="244,217,105,0" VerticalAlignment="Top" FontFamily="Arial" Foreground="White" RenderTransformOrigin="0.5,0.5" FontSize="20"/>

            <Button x:Name="confirm" Content="CONFIRMAR" Height="34" Margin="0,208,20,0" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="#FF2041C6" HorizontalAlignment="Right" Width="75" Style="{DynamicResource ButtonShadowAround}">
                <Button.Background>
                    <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
                </Button.Background>
            </Button>

            <DataGrid Name="gridProduct" HorizontalAlignment="Left" Margin="1,256,0,0" Width="683" BorderBrush="{x:Null}" Grid.ColumnSpan="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=Id}" Header="ID" Visibility="Hidden"/>
                    <DataGridTextColumn Binding="{Binding Path=Cod}" Header="CÓDIGO"/>
                    <DataGridTextColumn Binding="{Binding Path=Name}" Header="NOME" Width="*"/>
                    <DataGridTextColumn Binding="{Binding Path=Price}" Header="PREÇO" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Path=Quantity}" Header="QTD" MinWidth="40" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Path=Total}" Header="TOTAL" Width="Auto"/>
                </DataGrid.Columns>
                <DataGrid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF4472C4" Offset="0"/>
                        <GradientStop Color="#FF1E40C6" Offset="1"/>
                    </LinearGradientBrush>
                </DataGrid.Background>
            </DataGrid>

            <DataGrid x:Name="gridSearch" SelectionUnit="FullRow" HorizontalAlignment="Left" Height="79" VerticalAlignment="Top" Width="323" Margin="78,41,0,0" AutoGenerateColumns="True" RowHeaderWidth="0" IsReadOnly="true" SelectionMode="Single" VerticalScrollBarVisibility="Visible" d:IsHidden="True"/>

            <DataGrid x:Name="gridClient" SelectionUnit="FullRow" HorizontalAlignment="Left" Height="79" VerticalAlignment="Top" Width="593" Margin="65,91,0,0" AutoGenerateColumns="True" RowHeaderWidth="0" IsReadOnly="true" SelectionMode="Single" VerticalScrollBarVisibility="Visible" d:IsHidden="True"/>
            <ComboBox Margin="501,155,20,0" VerticalAlignment="Top" SelectedIndex="0" >
                <ListBoxItem Content="Á VISTA"/>
                <ListBoxItem Content="CRÉDITO"/>
                <ListBoxItem Content="DÉBITO"/>
            </ComboBox>
            <Label Content="DESCONTO" HorizontalAlignment="Left" Height="21" Margin="20,217,0,0" VerticalAlignment="Top" Width="104" FontFamily="Arial" Foreground="White"/>
            <TextBox x:Name="complement_Copy" CharacterCasing="Upper" Height="21" Margin="96,217,446,0" TextWrapping="Wrap" VerticalAlignment="Top"  SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>

        </Grid>
        <Image HorizontalAlignment="Left" Height="13" Margin="407,28,0,0" VerticalAlignment="Top" Width="15" Source="/Hamburgueria;component/Resources/lupa.png" RenderTransformOrigin="7.933,0.154"/>
        <Label Content="PRODUTO" HorizontalAlignment="Left" Height="22" Margin="20,20,0,0" VerticalAlignment="Top" Width="87" Foreground="White" FontSize="11"/>

    </Grid>
</Window>
