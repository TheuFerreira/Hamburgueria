<Window x:Class="Hamburgueria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hamburgueria___PC"
        mc:Ignorable="d"
        Title="MainWindow" Height="766.9" Width="1366" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid Background="Orange">
        <Button x:Name="BtnVendas" Content="" Margin="23,0,0,349" HorizontalAlignment="Left" Width="301" Height="148" VerticalAlignment="Bottom" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Botao_vendas.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnClientes" Content="" Margin="23,0,0,102" Height="148" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="301" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Botao_cliente.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnProdutos" Content="" Margin="0,0,90,349" Height="148" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="301" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Botao_Caixa.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnRelatorios" Content="" Margin="0,0,90,102" HorizontalAlignment="Right" Width="301" Height="148" VerticalAlignment="Bottom" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Botao_relatorios.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnRelatorios_Copy" Content="" Margin="521,0,0,102" HorizontalAlignment="Left" Width="301" Height="148" VerticalAlignment="Bottom" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Botao_Produtos.png"/>
            </Button.Background>
        </Button>
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="418" Margin="462,27,0,0" VerticalAlignment="Top" Width="470" Opacity="0.65">
            <Border.Background>
                <ImageBrush ImageSource="Resources/logo.png" Stretch="Uniform"/>
            </Border.Background>
        </Border>
    </Grid>
</Window>
