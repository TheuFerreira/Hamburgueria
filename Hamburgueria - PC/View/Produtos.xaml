<Window x:Class="Hamburgueria.View.Produtos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hamburgueria.View"
        mc:Ignorable="d"
        Title="Produtos" Height="450" Width="800" WindowState="Maximized" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Window.Resources>
        <SolidColorBrush x:Key="Turquesa" Color="#FFCDF5EA"/>
        <SolidColorBrush x:Key="TurquesaClaro" Color="#FFE9EBF5"/>
        <SolidColorBrush x:Key="AzulBruxao" Color="#4472c4"/>
    </Window.Resources>
    <Grid>
        <DataGrid x:Name="GridProdutos" 
                  Margin="0,0,0,60" 
                  AutoGenerateColumns="True"
                  AlternationCount="2" 
                  RowHeaderWidth="0"
                  VerticalGridLinesBrush="White"
                  HorizontalGridLinesBrush="White"
                  RowBackground="{StaticResource Turquesa}" 
                  AlternatingRowBackground="{DynamicResource TurquesaClaro}" 
                  CanUserDeleteRows="False" 
                  CanUserAddRows="False" 
                  IsReadOnly="True"
                  FontSize="18px"
                  SelectionMode="Single" 
                  HorizontalScrollBarVisibility="Visible"/>



        <Grid Background="#FF4472C4" 
              Height="60" 
              VerticalAlignment="Bottom">
            <Button x:Name="AddProduto" 
                    Content="ADICIONAR" 
                    Margin="0,0,31,10" 
                    BorderBrush="{x:Null}" 
                    FontFamily="Arial" 
                    FontWeight="Bold" 
                    HorizontalAlignment="Right" 
                    Width="73" Height="36" 
                    VerticalAlignment="Bottom" 
                    Style="{StaticResource ButtonShadowAround}" FontSize="11" AutomationProperties.Name="ADICIONAR">
                <Button.Background>
                    <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="DelProduto" 
                    Content="EXCLUIR" 
                    Margin="0,0,206,10" 
                    BorderBrush="{x:Null}" 
                    FontFamily="Arial" 
                    FontWeight="Bold" 
                    HorizontalAlignment="Right" 
                    Width="73" Height="36" 
                    VerticalAlignment="Bottom"  
                    Style="{StaticResource ButtonShadowAround}" FontSize="11">
                <Button.Background>
                    <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="EditProduto" 
                    Content="EDITAR"
                    Margin="0,0,118,10" 
                    BorderBrush="{x:Null}" 
                    FontFamily="Arial"
                    FontWeight="Bold" 
                    HorizontalAlignment="Right" 
                    Width="73" Height="36" 
                    VerticalAlignment="Bottom"  
                    Style="{StaticResource ButtonShadowAround}" FontSize="11">
                <Button.Background>
                    <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
                </Button.Background>
            </Button>
        </Grid>

    </Grid>
</Window>
