<Window x:Class="Hamburgueria.View.Vendas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hamburgueria.View"
        mc:Ignorable="d"
        Title="Vendas" Height="450" Width="800" WindowState="Maximized" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Window.Resources>
        <SolidColorBrush x:Key="Turquesa" Color="#4472C4"/>
        <SolidColorBrush x:Key="TurquesaClaro" Color="#8fAADC"/>
        <SolidColorBrush x:Key="AzulBruxao" Color="#2f5597"/>
    </Window.Resources>
    <Grid>
        <Rectangle Margin="0,362,0,0" Fill="#FF2F5597"/>
        <DataGrid x:Name="gridSales" 
                  Margin="0,-17,0,62" 
                  ItemsSource="{Binding Item}"
                  AutoGenerateColumns="True"
                  AlternationCount="2" 
                  RowHeaderWidth="0"
                  VerticalGridLinesBrush="{x:Null}"
                  HorizontalGridLinesBrush="White"
                  RowBackground="{StaticResource Turquesa}" 
                  AlternatingRowBackground="{DynamicResource TurquesaClaro}" 
                  CanUserDeleteRows="False" 
                  CanUserAddRows="False" 
                  FontSize="22px"
                  Foreground="White"
                  SelectionMode="Single" 
                  HorizontalScrollBarVisibility="Visible"
                  ColumnHeaderHeight="50">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Type}" Header="TYPE" Visibility="Hidden" FontSize="18"/>
                <DataGridTextColumn Binding="{Binding Value}" Header="TIPO" MinWidth="100" FontSize="18"/>
                <DataGridTextColumn Binding="{Binding File}" Header="FILE" Visibility="Hidden" FontSize="18"/>
                <DataGridTextColumn Binding="{Binding Info}" Header="INFO" Width="*" FontSize="18"/>
                <DataGridTextColumn Binding="{Binding Total}" Header="TOTAL" MinWidth="75" FontSize="18"/>
                <DataGridTextColumn Binding="{Binding Date}" Header="DATE" MinWidth="100" FontSize="18"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Remove}" Height="25" Width="40"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Modify}" Height="25" Width="40"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Print}" Height="25" Width="40"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Confirm}" Height="25" Width="40"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="addDelivery" HorizontalAlignment="Right" Content="DELIVERY" FontFamily="Arial" Width="75" Height="34" VerticalAlignment="Bottom" Margin="0,0,25,8" BorderBrush="{x:Null}" Style="{DynamicResource ButtonShadowAround}" Foreground="#FF2F5597">
            <Button.Background>
                <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="addLocal" HorizontalAlignment="Right" Content="BALCÃO" FontFamily="Arial" Width="75" Height="34" VerticalAlignment="Bottom" Margin="0,0,123,8" BorderBrush="{x:Null}" Style="{DynamicResource ButtonShadowAround}" Foreground="#FF2F5597">
            <Button.Background>
                <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="addFast" HorizontalAlignment="Right" Content="RÁPIDA" FontFamily="Arial" Width="75" Height="34" VerticalAlignment="Bottom" Margin="0,0,218,9" BorderBrush="{x:Null}" Style="{DynamicResource ButtonShadowAround}" Foreground="#FF2F5597">
            <Button.Background>
                <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
