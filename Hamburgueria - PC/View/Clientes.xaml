<Window x:Class="Hamburgueria.View.Clientes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hamburgueria.View"
        mc:Ignorable="d"
        Title="Clientes" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>

        <Grid Margin="0,359,0,0" Background="#FF4472C4">
            <Button x:Name="AddCliente" Content="ADICIONAR" Margin="0,0,27,10" BorderBrush="{x:Null}" FontFamily="Arial" FontWeight="Bold" FontSize="10" HorizontalAlignment="Right" Width="73" Height="36" VerticalAlignment="Bottom">
                <Button.Background>
                    <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="AddCliente_Copy" Content="EXCLUIR" Margin="0,0,206,10" BorderBrush="{x:Null}" FontFamily="Arial" FontWeight="Bold" FontSize="10" HorizontalAlignment="Right" Width="73" Height="36" VerticalAlignment="Bottom">
                <Button.Background>
                    <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="AddCliente_Copy1" Content="EDITAR" Margin="0,0,118,10" BorderBrush="{x:Null}" FontFamily="Arial" FontWeight="Bold" Click="AddCliente_Copy1_Click" FontSize="10" HorizontalAlignment="Right" Width="73" Height="36" VerticalAlignment="Bottom">
                <Button.Background>
                    <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
                </Button.Background>
            </Button>
        </Grid>

        <DataGrid x:Name="GridClientes" Margin="0,0,0,60"/>

    </Grid>
</Window>
