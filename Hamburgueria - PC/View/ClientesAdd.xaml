<Window x:Class="Hamburgueria.View.ClientesAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hamburgueria.View"
        mc:Ignorable="d"
        Title="ClientesAdd" Height="450" Width="800">
    <Grid Background="#FF9D0D76">

        <Button x:Name="ClearBtn" Content="LIMPAR" Margin="0,0,145,10" HorizontalAlignment="Right" Width="75" Height="34" VerticalAlignment="Bottom" BorderBrush="{x:Null}" Foreground="#FF9D0D76" FontFamily="Arial">
            <Button.Background>
                <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="SaveBtn" Content="SALVAR" Margin="0,0,34,10" HorizontalAlignment="Right" Width="75" Height="34" VerticalAlignment="Bottom" BorderBrush="{x:Null}" Foreground="#FF9D0D76" FontFamily="Arial">
            <Button.Background>
                <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Label Content="NOME:*" HorizontalAlignment="Left" Margin="82,50,0,0" VerticalAlignment="Top" Width="52" Foreground="White"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="22" Margin="139,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="446" CharacterCasing="Upper" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" Background="Black">
        </TextBox>
        <Label Content="RUA:*" HorizontalAlignment="Left" Margin="82,105,0,0" VerticalAlignment="Top" Width="43" Foreground="White" RenderTransformOrigin="0.953,0.635"/>
        <TextBox x:Name="Adress" HorizontalAlignment="Left" Height="22" Margin="125,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="319" CharacterCasing="Upper" SelectionBrush="{x:Null}" BorderBrush="{x:Null}" Background="Black">
        </TextBox>
        <Label Content="BAIRRO:*" HorizontalAlignment="Left" Margin="82,166,0,0" VerticalAlignment="Top" Width="58" Foreground="White"/>
        <TextBox x:Name="District" HorizontalAlignment="Left" Height="22" Margin="139,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="225" CharacterCasing="Upper" SelectionBrush="{x:Null}" BorderBrush="{x:Null}" Background="Black"/>
        <Label Content="NUMERO:*" HorizontalAlignment="Left" Margin="472,108,0,0" VerticalAlignment="Top" Width="68" Foreground="White"/>
        <TextBox x:Name="Number" HorizontalAlignment="Left" Height="22" Margin="535,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" CharacterCasing="Upper" RenderTransformOrigin="0.491,0.537" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" Background="Black">
        </TextBox>
        <Label Content="COMPLEMENTO:" HorizontalAlignment="Left" Margin="379,169,0,0" VerticalAlignment="Top" Width="127" Foreground="White"/>
        <TextBox x:Name="Complement" HorizontalAlignment="Left" Height="22" Margin="476,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="109" CharacterCasing="Upper" SelectionBrush="{x:Null}" BorderBrush="{x:Null}" Background="Black"/>
        <Label Content="REFERENCIA:  ________________________________________________________________" HorizontalAlignment="Left" Margin="85,238,0,0" VerticalAlignment="Top" Width="500" Foreground="White" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.588"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.656"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="Reference" HorizontalAlignment="Left" Height="22" Margin="167,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="415" CharacterCasing="Upper" SelectionBrush="#FFFF0C0C" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.5" Background="{x:Null}" Foreground="White">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.008"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
    </Grid>
</Window>
