<Window x:Class="Hamburgueria.View.Relatorios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hamburgueria.View"
        mc:Ignorable="d"
        Title="Relatorios" Height="768" Width="1366" WindowState="Maximized" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Window.Resources>
        <SolidColorBrush x:Key="Turquesa" Color="#4472C4"/>
        <SolidColorBrush x:Key="TurquesaClaro" Color="#8fAADC"/>
        <SolidColorBrush x:Key="AzulBruxao" Color="#2f5597"/>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF1B3BC6"/>
                <GradientStop Color="#FF4472C4" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <DataGrid x:Name="grid" 
                  Margin="0,212,0,0" 
                  AutoGenerateColumns="True"
                  AlternationCount="2"
                  RowBackground="{StaticResource Turquesa}" 
                  AlternatingRowBackground="{DynamicResource TurquesaClaro}" 
                  CanUserDeleteRows="False" 
                  CanUserAddRows="False" 
                  FontSize="22px"
                  IsReadOnly="True"
                  Foreground="White"
                  SelectionMode="Single" 
                  HorizontalScrollBarVisibility="Disabled"/>

        <Rectangle Height="40" VerticalAlignment="Bottom">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4472C4" Offset="0"/>
                    <GradientStop Color="#FF1B3BC6" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <ComboBox x:Name="styleBox" Margin="30,75,0,0" BorderBrush="{x:Null}" Foreground="#FF1D3DC6" HorizontalAlignment="Left" Width="250" Height="25" VerticalAlignment="Top" BorderThickness="0">
            <ListBoxItem Content="VENDAS"/>
            <ListBoxItem Content="PRODUTOS"/>
            <ListBoxItem Content="CLIENTES"/>
        </ComboBox>

        <ComboBox x:Name="periodBox" Margin="388,75,0,0" BorderBrush="{x:Null}" Foreground="#FF1D3DC6" HorizontalAlignment="Left" Width="250" Height="25" VerticalAlignment="Top">
            <ListBoxItem Content="DIÁRIO"/>
            <ListBoxItem Content="SEMANAL"/>
            <ListBoxItem Content="MENSAL"/>
            <ListBoxItem Content="ANUAL"/>
            <ListBoxItem Content="CUSTOMIZADO"/>
        </ComboBox>

        <ComboBox x:Name="typeBox" Margin="746,75,0,0" BorderBrush="{x:Null}" Foreground="#FF1D3DC6" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="250">
            <ListBoxItem Content="TODOS"/>
            <ListBoxItem Content="DELIVERY"/>
            <ListBoxItem Content="BALCÃO"/>
        </ComboBox>

        <DatePicker x:Name="dateOne" Margin="28,150,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="256" Height="30" BorderBrush="{x:Null}" Foreground="#FF1D3DC6"/>
        <DatePicker x:Name="dateTwo" Margin="388,150,0,0" VerticalAlignment="Top" Height="25" Foreground="#FF1D3DC6" BorderBrush="{x:Null}" HorizontalAlignment="Left" Width="250"/>

        <Button x:Name="Filter" Content="FILTRAR" Margin="839,150,444,0" VerticalAlignment="Top" FontSize="11" Foreground="#FF2F5597" Style="{DynamicResource ButtonShadowAround}" Height="25">
            <Button.Background>
                <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="Back" Content="VOLTAR" FontSize="11" Foreground="{x:Null}" Margin="20,10,0,0" VerticalAlignment="Top" Style="{DynamicResource ButtonShadowAround}" Height="28" HorizontalAlignment="Left" Width="18" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.935"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/Hamburgueria;component/Resources/iiu.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

        <Label x:Name="labelBruteTotal" Content="BRUTO TOTAL: R$0,00" Margin="100,0,1042,6" FontFamily="Arial" FontSize="15" Foreground="White" Height="27" VerticalAlignment="Bottom"/>
        <Label x:Name="labelDiscount" Content="DESCONTO TOTAL: R$0,00" Margin="559,0,559,8" FontFamily="Arial" FontSize="15" Foreground="White" Height="27" VerticalAlignment="Bottom"/>
        <Label x:Name="labelTotal" Content="TOTAL: R$0,00" Margin="1118,0,80,8" FontFamily="Arial" FontSize="15" Foreground="White" Height="27" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
