<Window x:Class="Hamburgueria.View.VendasBalcao"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hamburgueria.View"
      mc:Ignorable="d"
      Title="VendasBalcao" Background="White" Height="384" Width="683" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Background="#FF4472C4">
        <Rectangle Height="137" VerticalAlignment="Top">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1B3BC6" Offset="0"/>
                    <GradientStop Color="#FF4472C4" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="PRODUTO:" HorizontalAlignment="Left" Height="22" Margin="24,30,0,0" VerticalAlignment="Top" Width="63" Foreground="White" FontSize="11"/>

        <TextBox x:Name="search" CaretBrush="White" Height="21" Margin="87,32,312,0" CharacterCasing="Upper" TextWrapping="Wrap" VerticalAlignment="Top" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>
        <Image HorizontalAlignment="Left" Height="13" Margin="370,38,0,0" VerticalAlignment="Top" Width="15" Source="/Hamburgueria;component/Resources/lupa.png"/>

        <Label Content="QUANTIDADE:" HorizontalAlignment="Left" Height="21" Margin="436,30,0,0" VerticalAlignment="Top" Width="100" FontFamily="Arial" Foreground="White"/>
        <TextBox x:Name="quantity" CaretBrush="White" Height="21" Margin="525,32,34,0" TextWrapping="Wrap" VerticalAlignment="Top" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>
        <Label Content="OBSERVAÇÃO:" HorizontalAlignment="Left" Height="22" Margin="24,67,0,0" VerticalAlignment="Top" Width="90" Foreground="White" FontSize="11"/>
        <TextBox x:Name="observation" CaretBrush="White" Height="21" Margin="108,68,30,0" CharacterCasing="Upper" TextWrapping="Wrap" VerticalAlignment="Top" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>
        <Label Content="NUM. MESA:" HorizontalAlignment="Left" Height="21" Margin="30,110,0,0" VerticalAlignment="Top" Width="84" FontFamily="Arial" Foreground="White"/>
        <TextBox x:Name="numTable" CaretBrush="White" Height="21" Margin="108,112,409,0" TextWrapping="Wrap" VerticalAlignment="Top" Style="{DynamicResource TextBoxUnderline}" />
        <DataGrid x:Name="gridSearch" CanUserResizeColumns="False" CanUserResizeRows="False" SelectionUnit="FullRow" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="278" Margin="87,52,0,0" AutoGenerateColumns="True" RowHeaderWidth="0" IsReadOnly="true" SelectionMode="Single" VerticalScrollBarVisibility="Visible">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="ID" Visibility="Collapsed"/>
                <DataGridTextColumn Binding="{Binding COD}" Header="CÓDIGO"/>
                <DataGridTextColumn Binding="{Binding NAME}" Header="NOME" MinWidth="150" Width="*"/>
                <DataGridTextColumn Binding="{Binding PRICE, StringFormat=C2}" Header="PREÇO"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="confirm" Content="CONFIRMAR" Height="34" Margin="0,170,30,0" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="#FF2041C6" HorizontalAlignment="Right" Width="75" Style="{StaticResource ButtonShadowAround}"/>


        <Label x:Name="labelTotalSale" Content="TOTAL:R$0,00" Height="43" Margin="30,170,382,0" VerticalAlignment="Top" FontFamily="Arial" Foreground="White" FontSize="20"/>
        <DataGrid x:Name="gridProduct" CanUserResizeColumns="False" CanUserResizeRows="False" ItemsSource="{Binding Item}" Margin="0,0,0,0" BorderBrush="{x:Null}" Height="146" VerticalAlignment="Bottom">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="ID" Visibility="Hidden"/>
                <DataGridTextColumn Binding="{Binding Cod}" Header="CÓDIGO"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="NOME" Width="*"/>
                <DataGridTextColumn Binding="{Binding Price, StringFormat=C2}" Header="PREÇO" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding Quantity}" Header="QTD" MinWidth="40" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding Total, StringFormat=C2}" Header="TOTAL" Width="Auto"/>
            </DataGrid.Columns>
            <DataGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4472C4" Offset="0"/>
                    <GradientStop Color="#FF1E40C6" Offset="1"/>
                </LinearGradientBrush>
            </DataGrid.Background>
        </DataGrid>
    </Grid>
</Window>
