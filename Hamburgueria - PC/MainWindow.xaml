<Window x:Class="Hamburgueria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hamburgueria___PC"
        mc:Ignorable="d"
        Title="MainWindow" Height="766.9" Width="1366" WindowStartupLocation="CenterScreen" WindowState="Maximized" Icon="Resources/logo.png">
    <Grid Background="Orange">
        <Grid.RowDefinitions>
            <RowDefinition Height="297*"/>
            <RowDefinition Height="220*"/>
            <RowDefinition Height="220*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="455*"/>
            <ColumnDefinition Width="455*"/>
            <ColumnDefinition Width="455*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnVendas" Content="" Margin="80,37,80,34.946" BorderBrush="{x:Null}" Style="{StaticResource MyButtonStyle}" Grid.Row="1">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Botao_vendas.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnClientes" Content="" Margin="80,42.054,80,29" BorderBrush="{x:Null}" Style="{StaticResource MyButtonStyle}" Grid.Row="2">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Botao_cliente.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnCaixa" Content="" Margin="80,37,80,34.946" BorderBrush="{x:Null}" Style="{StaticResource MyButtonStyle}" Grid.Column="2" Grid.Row="1">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Botao_Caixa.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnRelatorios" Content="" Margin="80,42.054,80,29" BorderBrush="{x:Null}" Style="{StaticResource MyButtonStyle}" Grid.Column="2" Grid.Row="2">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Botao_relatorios.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnProdutos" Content="" Margin="80,42.054,80,29" BorderBrush="{x:Null}" Style="{StaticResource MyButtonStyle}" Grid.Column="1" Grid.Row="2">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Botao_Produtos.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Border BorderThickness="1" Margin="7,18,16,10" Opacity="0.65" Style="{StaticResource LogoShadow}" Grid.Column="1" Grid.RowSpan="2">
            <Border.Background>
                <ImageBrush ImageSource="Resources/logo.png" Stretch="Uniform"/>
            </Border.Background>
        </Border>
    </Grid>
</Window>
