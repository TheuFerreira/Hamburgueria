<Window x:Class="Hamburgueria.View.ClientesAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hamburgueria.View"
        mc:Ignorable="d"
        Title="ClientesAdd" Height="384" Width="683" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF9D0D76">

        <Button x:Name="ClearBtn" Content="LIMPAR" Margin="0,0,105,10" HorizontalAlignment="Right" Width="75" Height="34" VerticalAlignment="Bottom" BorderBrush="{x:Null}" Click="ClearBtn_Click_1" Foreground="#FF9D0D76" FontFamily="Arial">
            <Button.Background>
                <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="SaveBtn" Content="SALVAR" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="34" VerticalAlignment="Bottom" BorderBrush="{x:Null}" Foreground="#FF9D0D76" FontFamily="Arial">
            <Button.Background>
                <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Label Content="NOME:*" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="127" Foreground="White"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="3" Margin="52,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="585" CharacterCasing="Upper" BorderBrush="{x:Null}" Background="White"/>
        <Label Content="RUA:*" HorizontalAlignment="Left" Margin="0,95,0,0" VerticalAlignment="Top" Width="127" Foreground="White"/>
        <TextBox x:Name="Adress" HorizontalAlignment="Left" Height="3" Margin="38,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="439" CharacterCasing="Upper"/>
        <Label Content="BAIRRO:*" HorizontalAlignment="Left" Margin="0,175,0,0" VerticalAlignment="Top" Width="127" Foreground="White"/>
        <TextBox x:Name="District" HorizontalAlignment="Left" Height="3" Margin="56,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="277" CharacterCasing="Upper"/>
        <Label Content="NUMERO:*" HorizontalAlignment="Left" Margin="510,92,0,0" VerticalAlignment="Top" Width="127" Foreground="White"/>
        <TextBox x:Name="Number" HorizontalAlignment="Left" Height="3" Margin="578,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="59" CharacterCasing="Upper" RenderTransformOrigin="0.491,0.537"/>
        <Label Content="COMPLEMENTO:" HorizontalAlignment="Left" Margin="358,175,0,0" VerticalAlignment="Top" Width="127" Foreground="White"/>
        <TextBox x:Name="Complement" HorizontalAlignment="Left" Height="3" Margin="455,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" CharacterCasing="Upper"/>
        <Label Content="REFERENCIA:" HorizontalAlignment="Left" Margin="-1,245,0,0" VerticalAlignment="Top" Width="128" Foreground="White"/>
        <TextBox x:Name="Reference" HorizontalAlignment="Left" Height="3" Margin="79,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="562" CharacterCasing="Upper"/>
    </Grid>
</Window>
