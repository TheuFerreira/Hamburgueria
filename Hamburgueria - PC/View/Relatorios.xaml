<Window x:Class="Hamburgueria.View.Relatorios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hamburgueria.View"
        mc:Ignorable="d"
        Title="Relatorios" Height="768" Width="1366" WindowState="Maximized" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF1B3BC6" Offset="0"/>
                <GradientStop Color="#FF4472C4" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ComboBox x:Name="styleBox" Margin="30,30,0,0" BorderBrush="{x:Null}" Foreground="#FF1D3DC6" HorizontalAlignment="Left" Width="250" Height="25" VerticalAlignment="Top">
            <ListBoxItem Content="VENDAS"/>
            <ListBoxItem Content="PRODUTOS"/>
            <ListBoxItem Content="CLIENTES"/>
        </ComboBox>

        <ComboBox x:Name="periodBox" Margin="388,30,0,0" BorderBrush="{x:Null}" Foreground="#FF1D3DC6" HorizontalAlignment="Left" Width="250" Height="25" VerticalAlignment="Top">
            <ListBoxItem Content="DIÁRIO"/>
            <ListBoxItem Content="SEMANAL"/>
            <ListBoxItem Content="MENSAL"/>
            <ListBoxItem Content="ANUAL"/>
            <ListBoxItem Content="CUSTOMIZADO"/>
        </ComboBox>

        <ComboBox x:Name="typeBox" Margin="746,30,0,0" BorderBrush="{x:Null}" Foreground="#FF1D3DC6" HorizontalAlignment="Left" Width="250" Height="25" VerticalAlignment="Top">
            <ListBoxItem Content="TODOS"/>
            <ListBoxItem Content="DELIVERY"/>
            <ListBoxItem Content="BALCÃO"/>
        </ComboBox>

        <DatePicker x:Name="dateOne" Margin="30,131,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="250" Height="25" BorderBrush="{x:Null}" Foreground="#FF1D3DC6" Grid.RowSpan="2"/>
        <DatePicker x:Name="dateTwo" Margin="388,131,0,0" VerticalAlignment="Top" Height="25" Foreground="#FF1D3DC6" BorderBrush="{x:Null}" Grid.RowSpan="2" HorizontalAlignment="Left" Width="250"/>

        <Button x:Name="Filter" Content="FILTRAR" HorizontalAlignment="Left" Margin="840,131,0,0" VerticalAlignment="Top" Width="75" Style="{DynamicResource ButtonShadowAround}" Height="25">
            <Button.Background>
                <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
            </Button.Background>
        </Button>
        <DataGrid x:Name="grid" Margin="0,212,0,0"/>

    </Grid>
</Window>
