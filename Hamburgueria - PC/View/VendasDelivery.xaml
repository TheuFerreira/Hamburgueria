<Window x:Class="Hamburgueria.View.VendasDelivery"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hamburgueria.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VendasDelivery" Background="White" Height="384" Width="684" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid Background="#FF4472C4">
            <Rectangle Height="137" VerticalAlignment="Top" Grid.ColumnSpan="2">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF1B3BC6" Offset="0"/>
                        <GradientStop Color="#FF4472C4" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <TextBox x:Name="search" Height="21" Margin="200,28,199,0" CharacterCasing="Upper" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>

            <Label Content="NOME" HorizontalAlignment="Left" Height="21" Margin="8,76,0,0" VerticalAlignment="Top" Width="45" FontFamily="Arial" Foreground="White"/>
            <TextBox x:Name="nameClient" Height="21" Margin="51,75,179,0" TextWrapping="Wrap" VerticalAlignment="Top" SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial" CharacterCasing="Upper"/>

            <Label Content="QUANTIDADE" Height="21" Margin="508,76,75,0" VerticalAlignment="Top" FontFamily="Arial" Foreground="White" RenderTransformOrigin="0.5,0.5"/>
            <TextBox x:Name="quantity" Text="1" Height="21" Margin="596,75,13,0" TextWrapping="Wrap" VerticalAlignment="Top" BorderBrush="White" SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>

            <Label Content="NÚMERO" HorizontalAlignment="Left" Height="21" Margin="8,130,0,0" VerticalAlignment="Top" Width="63" FontFamily="Arial" Foreground="White"/>
            <TextBox x:Name="number" Height="21" Margin="69,129,525,0" TextWrapping="Wrap" VerticalAlignment="Top"  SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>

            <Label Content="RUA" HorizontalAlignment="Left" Height="21" Margin="165,130,0,0" VerticalAlignment="Top" Width="37" FontFamily="Arial" Foreground="White"/>
            <TextBox x:Name="street" CharacterCasing="Upper" Height="21" Margin="198,129,10,0" TextWrapping="Wrap" VerticalAlignment="Top"  SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>

            <Label Content="COMPLEMENTO" HorizontalAlignment="Left" Height="21" Margin="8,180,0,0" VerticalAlignment="Top" Width="104" FontFamily="Arial" Foreground="White"/>
            <TextBox x:Name="complement" CharacterCasing="Upper" Height="21" Margin="108,179,181,0" TextWrapping="Wrap" VerticalAlignment="Top"  SelectionBrush="{x:Null}" Style="{DynamicResource TextBoxUnderline}" FontFamily="Arial"/>

            <Label x:Name="labelTotalSale" Content="TOTAL:R$0,00" Height="21" Margin="514,180,53,0" VerticalAlignment="Top" FontFamily="Arial" Foreground="White" RenderTransformOrigin="0.5,0.5"/>

            <Button x:Name="confirm" Content="CONFIRMAR" Height="34" Margin="0,217,8,0" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="#FF2041C6" HorizontalAlignment="Right" Width="75" Style="{DynamicResource ButtonShadowAround}">
                <Button.Background>
                    <ImageBrush ImageSource="/Hamburgueria;component/Resources/BUTAO_IGOR 1.1.png"/>
                </Button.Background>
            </Button>

            <DataGrid Name="gridProduct" HorizontalAlignment="Left" Margin="1,256,0,0" Width="683" BorderBrush="{x:Null}" Grid.ColumnSpan="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=Id}" Header="ID" Visibility="Hidden"/>
                    <DataGridTextColumn Binding="{Binding Path=Cod}" Header="CÓDIGO"/>
                    <DataGridTextColumn Binding="{Binding Path=Name}" Header="NOME" Width="*"/>
                    <DataGridTextColumn Binding="{Binding Path=Price}" Header="PREÇO" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Path=Quantity}" Header="QTD" MinWidth="40" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Path=Total}" Header="TOTAL" Width="Auto"/>
                </DataGrid.Columns>
                <DataGrid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF4472C4" Offset="0"/>
                        <GradientStop Color="#FF1E40C6" Offset="1"/>
                    </LinearGradientBrush>
                </DataGrid.Background>
            </DataGrid>

            <DataGrid x:Name="gridSearch" SelectionUnit="FullRow" HorizontalAlignment="Left" Height="79" VerticalAlignment="Top" Width="285" Margin="200,46,0,0" AutoGenerateColumns="True" RowHeaderWidth="0" IsReadOnly="true" SelectionMode="Single" VerticalScrollBarVisibility="Visible" d:IsHidden="True"/>
            
            <DataGrid x:Name="gridClient" SelectionUnit="FullRow" HorizontalAlignment="Left" Height="79" VerticalAlignment="Top" Width="448" Margin="53,97,0,0" AutoGenerateColumns="True" RowHeaderWidth="0" IsReadOnly="true" SelectionMode="Single" VerticalScrollBarVisibility="Visible" d:IsHidden="True"/>

        </Grid>
        <Image HorizontalAlignment="Left" Height="13" Margin="501,33,0,0" VerticalAlignment="Top" Width="15" Source="/Hamburgueria;component/Resources/lupa.png"/>
        <Label Content="PRODUTO" HorizontalAlignment="Left" Height="22" Margin="142,29,0,0" VerticalAlignment="Top" Width="87" Foreground="White" FontSize="11"/>

    </Grid>
</Window>
